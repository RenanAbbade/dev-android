<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/imageAll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:layout_height="45dp"
            android:tint="@color/white"
            android:src="@drawable/ic_all_inclusive_black_24dp"/>

        <ImageView
            android:id="@+id/imageHappy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:layout_height="45dp"
            android:tint="@color/white"
            android:src="@drawable/ic_happy"/>

        <ImageView
            android:id="@+id/imageMorning"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:layout_height="45dp"
            android:tint="@color/white"
            android:src="@drawable/ic_wb_sunny_black_24dp"/>



    </LinearLayout>

    <TextView
        android:id="@+id/textName"
        android:layout_below="@id/menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
 />

    <TextView
        android:id="@+id/textPhrase"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="32dp"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frase"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:textAlignment="center"
        />
    
    <View
        android:layout_width="128dp"
        android:layout_below="@id/textPhrase"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:layout_height="3dp"/>

    <Button
       android:id="@+id/buttonNewPhrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:textColor="@color/white"
        android:background="@drawable/ripple_bottom"
        android:text="Nova Frase"/>

</RelativeLayout>